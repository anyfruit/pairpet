.title {
  font-size: 32rpx;
  font-weight: 600;
}

.error-text {
  color: #d93025;
}

.pet-card {
  background: linear-gradient(180deg, #fff8ef 0%, #ffffff 100%);
}

.pet-line {
  color: #555;
  margin-top: 8rpx;
}

.progress-track {
  margin-top: 12rpx;
  width: 100%;
  height: 16rpx;
  border-radius: 10rpx;
  background: #f0f0f0;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: #1aad19;
}

.score {
  margin-top: 8rpx;
  font-size: 46rpx;
  font-weight: 700;
  color: #1aad19;
}

.task-line {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-status {
  margin-top: 4rpx;
  color: #666;
  font-size: 24rpx;
}
